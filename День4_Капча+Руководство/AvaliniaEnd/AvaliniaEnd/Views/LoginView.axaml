<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaliniaEnd.Views.LoginView"
			 xmlns:vm="using:AvaliniaEnd.ViewModels"
			 xmlns:v="using:AvaliniaEnd.Views"
			 x:DataType="vm:LoginViewModel"
			 >
	<StackPanel VerticalAlignment="Center">
		<TextBlock Text="Авторизация" FontSize="24" HorizontalAlignment="Center" Margin="30"/>
		<StackPanel HorizontalAlignment="Center">
		<TextBox Name="IdNumberInput" Text="{Binding IdUser}" Watermark="IdNumber" Margin="10" Width="100"/>
		<TextBox Name="PasswordInput" Text="{Binding Password1}" Watermark="Password" PasswordChar="*" Margin="20" Width="100"/>
			<StackPanel>
			<TextBlock Text="{Binding Captcha_gen}" HorizontalAlignment="Center"/>
			<TextBox Text="{Binding Captcha}" Margin="10"/>
				<TextBlock Text="Введите капчу" HorizontalAlignment="Center" Margin="10" />
			</StackPanel>
		<Button Content=" Войти" Command="{Binding UserData}" Width="70" HorizontalAlignment="Center"/>
		</StackPanel>
	</StackPanel>
</UserControl>
