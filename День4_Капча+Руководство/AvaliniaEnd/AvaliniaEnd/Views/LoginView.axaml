<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaliniaEnd.Views.LoginView"
			 xmlns:vm="using:AvaliniaEnd.ViewModels"
			 xmlns:v="using:AvaliniaEnd.Views"
			 x:DataType="vm:LoginViewModel"
			 Background="White"
			 >
	<Border Background="White" Width="300" BorderThickness="1" CornerRadius="10" Padding="30">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<TextBox Name="IdNumberInput" Text="{Binding IdUser}" Watermark="IdNumber"
					 Margin="10" Width="200" Height="35" BorderThickness="1" CornerRadius="5"/>

			<TextBox Name="PasswordInput" Text="{Binding Password1}" Watermark="Password" PasswordChar="*"
					 Margin="10" Width="200" Height="35" BorderThickness="1" CornerRadius="5"/>

			<StackPanel>
				<TextBlock Text="{Binding Captcha_gen}" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,5" Background="Black"/>
				<TextBox Text="{Binding Captcha}" Margin="10" Width="200" Height="35" BorderThickness="1" CornerRadius="5"/>
				<TextBlock Text="Введите капчу" HorizontalAlignment="Center" Foreground="#666" Margin="0,5,0,10"/>
			</StackPanel>

			<Button Content="Войти" Command="{Binding UserData}" Width="100" Height="40"
					Background="#4CAF50" Foreground="White" FontWeight="Bold" CornerRadius="5"
					HorizontalAlignment="Center" Margin="10"/>
		</StackPanel>
	</Border>

</UserControl>
