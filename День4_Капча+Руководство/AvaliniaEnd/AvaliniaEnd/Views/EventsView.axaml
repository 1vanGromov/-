<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaliniaEnd.Views.EventsView"
			  xmlns:v="using:AvaliniaEnd.Views"
			 xmlns:vm="using:AvaliniaEnd.ViewModels"
			 x:DataType="vm:EventsViewModel"
			 >

	<Border Background="White" Width="700" BorderThickness="1" CornerRadius="10" Padding="20">
		<StackPanel>
			<TextBlock Text="Окно мероприятий" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Spacing="10">
				<Button Content="Фильтр по дате"  Width="150" Height="40" Background="#FF9800" Foreground="White" FontWeight="Bold" CornerRadius="5"/>
				<Button Content="Фильтр по названию"  Width="180" Height="40" Background="#FF9800" Foreground="White" FontWeight="Bold" CornerRadius="5"/>
				<Button Content="Сбросить фильтры"  Width="180" Height="40" Background="#F44336" Foreground="White" FontWeight="Bold" CornerRadius="5"/>
			</StackPanel>

			<ListBox ItemsSource="{Binding Events}" Name="EventsList" Width="650" Height="500" BorderThickness="0">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border BorderThickness="1" CornerRadius="5" BorderBrush="#DDD" Padding="10" Margin="5">
							<StackPanel Orientation="Horizontal" Spacing="10">
								<Image Source="{Binding Image}" Width="100" Height="100" Stretch="UniformToFill"/>
								<StackPanel>
									<TextBlock Text="{Binding EventTitle}" FontWeight="Bold" FontSize="16"/>
									<TextBlock Text="{Binding StartDate, StringFormat=Дата начала: {0}}" Foreground="#555"/>
									<TextBlock Text="{Binding Days, StringFormat=Количество дней: {0}}" Foreground="#555"/>
								</StackPanel>
							</StackPanel>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</Border>


</UserControl>
